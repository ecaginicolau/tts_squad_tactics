function onLoad()
    update_asset()
    Wait.frames(
            function()
                MainUI.refresh()
                -- register another all character listener
                Listener.register()
            end,
            30
    )

    PlayerDie.init()
end

function onPlayerChangeColor(_)
    MainUI.refresh()
    PlayerDie.init()
end
