walk_animation = 1 
function onPickUp(player_color)
  self.AssetBundle.playLoopingEffect(walk_animation)
end

function onDrop(player_color)
  --  this animation does'nt have the time to run but it because the next default loop animation
  self.AssetBundle.playLoopingEffect(0)
  -- launch an attack for the LOL
  self.AssetBundle.playTriggerEffect(0)
end
